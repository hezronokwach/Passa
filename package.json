{
  "name": "passa-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "A modern blockchain-powered creator economy platform built on Stellar.",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm:dev:backend\" \"npm:dev:frontend\"",
    "dev:frontend": "npm run dev --workspace=@passa/frontend",
    "dev:backend": "npm run dev --workspace=@passa/backend",
    "build": "npm run build --workspace=@passa/frontend && npm run build --workspace=@passa/backend",
    "build:frontend": "npm run build --workspace=@passa/frontend",
    "build:backend": "npm run build --workspace=@passa/backend",
    "start": "npm start --workspace=@passa/backend",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "db:migrate": "npm run db:migrate --workspace=@passa/backend",
    "db:seed": "npm run db:seed --workspace=@passa/backend",
    "db:reset": "npm run db:reset --workspace=@passa/backend",
    "db:setup": "npm run db:setup --workspace=@passa/backend",
    "db:status": "npm run db:status --workspace=@passa/backend"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "author": "Hezron Okwach <hezronokwach@gmail.com>",
  "license": "MIT"
}