{
  "name": "passa",
  "version": "1.0.0",
  "description": "Next-Generation Blockchain-Powered Creator Economy Platform",
  "private": true,
  "workspaces": [
    "backend",
    "frontend",
    "contracts",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run dev:contracts\"",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:contracts": "npm run dev --workspace=contracts",
    "build": "npm run build --workspaces",
    "build:backend": "npm run build --workspace=backend",
    "build:frontend": "npm run build --workspace=frontend",
    "build:contracts": "npm run build --workspace=contracts",
    "test": "npm run test --workspaces",
    "test:backend": "npm run test --workspace=backend",
    "test:frontend": "npm run test --workspace=frontend",
    "test:contracts": "npm run test --workspace=contracts",
    "lint": "npm run lint --workspaces",
    "lint:fix": "npm run lint:fix --workspaces",
    "install:all": "npm install && npm run install --workspaces",
    "clean": "npm run clean --workspaces && rm -rf node_modules",
    "deploy:dev": "npm run deploy:dev --workspace=infrastructure",
    "deploy:prod": "npm run deploy:prod --workspace=infrastructure",
    "db:migrate": "npm run db:migrate --workspace=backend",
    "db:seed": "npm run db:seed --workspace=backend",
    "contracts:deploy": "npm run deploy --workspace=contracts",
    "contracts:test": "npm run test --workspace=contracts"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/Passa.git"
  },
  "keywords": [
    "blockchain",
    "stellar",
    "soroban",
    "creator-economy",
    "events",
    "ticketing",
    "defi",
    "web3",
    "passa"
  ],
  "author": "Passa Team",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
